<div class="row">
    <div class="col-md-5">
        <h3>Create a new article</h3>
        <form action="">
            <div class="form-group"><label for="">Title:</label>{{input class='form-control' type='text' value=title}}</div>
            <div class="form-group"><label for="">Excerpt:</label>{{input class='form-control' type='text' value=excerpt}}</div>
            <div class="form-group"><label for="">Body text:</label>{{textarea class='form-control' value=body}}</div>
            <button class="btn btn-success" {{action 'addNewPost'}}>Add New Article</button>
        </form>
    </div>

    <div class="col-md-4">
        {{partial 'post/show'}}
    </div>
</div>